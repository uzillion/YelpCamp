<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all around the world</p>
			<a href="/camps/new" class="btn btn-primary">Add New Campground</a>
		</div>
	</header>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% camps.forEach(function(camp) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=camp.image%>">
					<div class="caption"><h4><%=camp.name%></h4></div>
					<div class="caption"><a href="/camps/<%= camp._id %>" class="btn btn-primary">More info</a></div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer %>