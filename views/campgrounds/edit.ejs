<% include ../partials/header %>

<div class="container">
	<div class="row" style="width: 30%; margin: 25px auto;">
		<h1>Add a new campground</h1>
		<form action="/camps" method="POST">
			<div class="form-group">
				<input type="text" name="camp[name]" placeholder="Camp Name" class="form-control" value="<%= camp.name %>">
			</div>
			<div class="form-group">
				<input type="text" name="camp[image]" placeholder="Image URL" class="form-control" value="<%= camp.image %>">
			</div>
			<div class="form-group">
				<input type="text" name="camp[desc]" placeholder="Description" class="form-control" value="<%= camp.desc %>">
			</div>
			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>
