<% include ../partials/header %>

<div class="container">
	<div class="row" style="width: 30%; margin: 25px auto;">
		<h1> Add a comment </h1>
		<form action="/camps/<%= camp._id %>" method="POST">
			<div class="form-group">
				<input type="text" name="comment[author]" placeholder="Author" class="form-control" <% if(user) { %> value="<%= user.username %>" readonly <% } %>>
			</div>
			<div class="form-group">
				<input type="text" name="comment[comment]" placeholder="Comment" class="form-control">
			</div>
			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>